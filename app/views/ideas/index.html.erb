<p id="notice"><%= notice %></p>

<h1>Ideas</h1>

<table class="ideas-table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Picture</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ideas.each do |idea| %>
      <tr>
        <td><%= idea.name %></td>
        <td><%= idea.description %></td>
        <td><%= idea.picture %></td>
        <td><%= link_to '', idea, class: "fa fa-eye btn-show" %></td>
        <td><%= link_to '', edit_idea_path(idea), class: "fa fa-pencil btn-edit" %></td>
        <td><%= link_to '', idea, method: :delete, data: { confirm: 'Are you sure?' }, class: "fa fa-trash-o btn-trash" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<i class="fa fa-plus-circle" aria-hidden="true"> <%= link_to 'New Idea', new_idea_path %></i>
